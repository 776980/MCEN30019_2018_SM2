<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Connection Status"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toStartOf="@+id/connection_status_icon" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/start_connection_button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp" android:src="@color/colorConnecting"
            android:id="@+id/connection_status_icon"
            android:visibility="visible"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="400dp" app:layout_constraintBottom_toTopOf="@+id/start_demo_button"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"/>
    <Button
            android:text="CONNECT"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_connection_button"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/led_on"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="LED ON"
            android:layout_width="162dp"
            android:layout_height="0dp"
            android:id="@+id/led_on"
            app:layout_constraintTop_toBottomOf="@+id/start_connection_button" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/led_off"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="LED OFF"
            android:layout_width="162dp"
            android:layout_height="0dp"
            android:id="@+id/led_off"
            app:layout_constraintTop_toBottomOf="@+id/led_on" android:layout_marginBottom="31dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/contract_hand_button"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="CONTRACT ALL"
            android:layout_width="162dp"
            android:layout_height="0dp"
            android:id="@+id/contract_hand_button"
            app:layout_constraintTop_toBottomOf="@+id/led_off" android:layout_marginBottom="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/start_demo_button"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="START DEMO"
            android:layout_width="162dp"
            android:layout_height="0dp"
            android:id="@+id/start_demo_button"
            app:layout_constraintTop_toBottomOf="@+id/connection_status_icon" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>