<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DemoActivity">

    <SeekBar
            android:layout_width="336dp"
            android:layout_height="24dp"
            android:id="@+id/bar_index_middle" android:layout_marginTop="168dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bar_ring_pinky" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/bar_index_middle" android:layout_marginTop="83dp"
            app:layout_constraintEnd_toEndOf="@+id/bar_index_middle"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/bar_thumb" android:layout_marginTop="168dp"
            app:layout_constraintTop_toBottomOf="@+id/bar_index_middle" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" android:layout_marginEnd="19dp" android:layout_marginRight="19dp"
            app:layout_constraintHorizontal_bias="1.0" style="@style/Widget.AppCompat.SeekBar.Discrete"/>
</android.support.constraint.ConstraintLayout>