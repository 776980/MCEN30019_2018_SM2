<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ControllerActivity" tools:layout_editor_absoluteY="25dp">

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/bar_index_middle"
            android:layout_marginTop="124dp"
            android:layout_marginBottom="123dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_expand" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp" android:layout_marginEnd="6dp" android:layout_marginRight="6dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:id="@+id/bar_ring_pinky"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="26dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp" android:layout_marginEnd="6dp" android:layout_marginRight="6dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/bar_thumb"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="48dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_expand" app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp" android:layout_marginEnd="2dp" android:layout_marginRight="2dp"/>
    <TextView
            android:text="Index Middle"
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Ring Pinky"
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bar_index_middle"/>
    <TextView
            android:text="Thumb"
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:id="@+id/textView5"
            android:layout_marginTop="115dp"
            app:layout_constraintTop_toBottomOf="@+id/bar_ring_pinky" android:layout_marginBottom="117dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/button_expand"/>
    <Button
            android:text="Expand All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_expand"
            app:layout_constraintEnd_toStartOf="@+id/button_contract" android:layout_marginBottom="237dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginRight="25dp"/>
    <Button
            android:text="Contract All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contract"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/bar_thumb" app:layout_constraintStart_toEndOf="@+id/button_expand"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Grab ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_ball"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/button_expand"
            app:layout_constraintEnd_toEndOf="@+id/button_hammer"
            app:layout_constraintStart_toStartOf="@+id/button_expand" android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"/>
    <Button
            android:text="Grab marker"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/button_marker"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="91dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_contract" app:layout_constraintBottom_toBottomOf="@+id/button"
            android:layout_marginEnd="49dp" android:layout_marginRight="49dp"/>
    <Button
            android:text="Grab Hammer"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_hammer"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="42dp"
            android:layout_marginBottom="45dp"/>
    <Button
            android:text="WAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp" android:layout_marginBottom="52dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>